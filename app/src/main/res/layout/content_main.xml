<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alex.onlinebu.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/layout"
    android:backgroundTintMode="src_in">


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Visiteur"
        android:id="@+id/boutonVisiteur"
        android:background="#eea209"
        android:textColor="#fefdfd"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/boutonLecteur"
        android:layout_alignStart="@+id/boutonLecteur" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Lecteur"
        android:background="#eea209"
        android:id="@+id/boutonLecteur"
        android:textColor="#ffffff"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/boutonVisiteur"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/parisx"
        android:layout_above="@+id/boutonVisiteur"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
